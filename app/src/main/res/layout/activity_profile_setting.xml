<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.profile.ProfileSettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/profile_setting_back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:text="@string/profile_setting"
            android:textColor="@color/text1"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintStart_toEndOf="@+id/profile_setting_back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/profile_image_set_bt"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/bg_rectangle_10dp"
            android:backgroundTint="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_default_profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="48dp"
            android:layout_marginStart="55dp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/text2"
            android:src="@drawable/ic_edit"
            app:layout_constraintStart_toStartOf="@+id/profile_image_set_bt"
            app:layout_constraintTop_toTopOf="@+id/profile_image_set_bt" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:text="@string/set_nickname"
            android:textColor="@color/text2"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image_set_bt" />

        <EditText
            android:id="@+id/profile_nickname_setting_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="20dp"
            android:hint="@string/edit_nickname"
            android:maxLines="1"
            android:textColorHint="@color/text3"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:layout_editor_absoluteX="57dp"
            android:importantForAutofill="no"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/present_nickname"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:textColor="@color/text2"
            android:textSize="12sp"
            android:fontFamily="@font/nanum_square_neo_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_nickname_setting_et" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_setting_completion_bt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="70dp"
            android:text="@string/set_ok"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_square_neo_regular"
            android:background="@drawable/bg_rectangle_10dp"
            android:backgroundTint="@color/main1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>