<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.signup.SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/onboard_challenge_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginBottom="20dp"
            android:text="@string/onboard_challenge"
            android:textColor="@color/text1"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/nanum_square_neo_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        />

        <ImageView
            android:id="@+id/onboard_img_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_onboard_glove"
            android:layout_marginTop="260dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/onboard_three_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboard_glove"
            android:textSize="16sp"
            android:layout_marginTop="350dp"
            android:textColor="@color/text1"
            android:fontFamily="@font/nanum_square_neo_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onboard_challenge_tv"
            />


        <ImageView
            android:id="@+id/onboard_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_onboard_dots_three"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onboard_three_tv"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/onboard_simple_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_simple"
            android:textColor="@color/text2"
            android:textSize="12sp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="125dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onboard_three_tv"/>

        <ImageButton
            android:id="@+id/kakao_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/onboard_simple_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/kakao_login_large_wide"
            android:background="@null"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/naver_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/kakao_login_btn"
            app:layout_constraintStart_toStartOf="@+id/kakao_login_btn"
            app:layout_constraintEnd_toEndOf="@+id/kakao_login_btn"
            android:src="@drawable/naver_login_large_wide"
            android:background="@null"
            android:scaleType="fitCenter"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>