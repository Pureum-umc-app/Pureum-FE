<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.signup.SignUpProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/signup_logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_pureum_logo"/>

        <TextView
            android:id="@+id/signup_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/main1"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:text="@string/signup_welcome"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/signup_logo_iv"
            app:layout_constraintTop_toBottomOf="@id/signup_logo_iv"/>

        <TextView
            android:id="@+id/signup_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_setting"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:textColor="@color/text1"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/signup_logo_iv"
            app:layout_constraintTop_toBottomOf="@id/signup_welcome"
            android:layout_marginTop="12dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signup_change_img_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/signup_setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">



        <ImageView
            android:id="@+id/signup_basic_profile_ib"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_signup_profile_basic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/signup_change_img_cl"
            />

        <TextView
            android:id="@+id/signup_change_profile_img_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_profile_img"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/main1"
            android:fontFamily="@font/nanum_square_neo_extrabold"
            app:layout_constraintStart_toStartOf="@id/signup_basic_profile_ib"
            app:layout_constraintEnd_toEndOf="@id/signup_basic_profile_ib"
            app:layout_constraintTop_toBottomOf="@id/signup_basic_profile_ib"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/signup_nickname_tf"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/signup_logo_iv"
            app:layout_constraintEnd_toEndOf="@+id/signup_logo_iv"
            app:layout_constraintTop_toBottomOf="@id/signup_change_img_cl">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_nickname_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:maxLength="15"
                android:background="@drawable/signup_edittext_round"
                android:backgroundTint="@color/white"
                android:maxLines="1"
                android:hint="@string/enter_nickname"
                android:textColorHint="@color/text3"
                android:textSize="14sp"
                android:textColor="@color/text1"
                android:fontFamily="@font/nanum_square_neo_regular" />

        </com.google.android.material.textfield.TextInputLayout>






        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_agree_next_bt"
            android:layout_width="296dp"
            android:layout_height="65dp"
            android:text="@string/signup_follow"
            android:textSize="16sp"
            android:background="@drawable/signup_next_button_not_fill"
            android:backgroundTint="@color/main3"
            android:textColor="@color/text2"
            android:layout_marginBottom="70dp"
            android:fontFamily="@font/nanum_square_neo_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>