<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="30dp">

    <TextView
        android:id="@+id/sign_up_access_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/access_right"
        android:textColor="@color/text1"
        android:fontFamily="@font/nanum_square_neo_bold"
        android:textSize="16sp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sign_up_access_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/use_access"
        android:fontFamily="@font/nanum_square_neo_regular"
        android:textSize="14sp"
        android:textColor="@color/text1"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_access_tv" />

    <View
        android:id="@+id/sign_up_view_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@color/text3"
        android:backgroundTint="@color/text3"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_access_right_tv"/>

    <ImageView
        android:id="@+id/sign_up_camera_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_camera"
        android:layout_marginTop="19dp"
        android:layout_marginStart="45dp"
        app:layout_constraintTop_toBottomOf="@id/sign_up_view_one"/>

    <View
        android:id="@+id/sign_up_view_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@color/text3"
        android:backgroundTint="@color/text3"
        android:layout_marginTop="19dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_camera_iv"/>

    <TextView
        android:id="@+id/sign_up_use_camera_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_camera"
        android:fontFamily="@font/nanum_square_neo_regular"
        android:textColor="@color/text1"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/sign_up_camera_iv"
        app:layout_constraintEnd_toEndOf="@id/sign_up_view_one"
        app:layout_constraintTop_toBottomOf="@id/sign_up_view_one"
        app:layout_constraintBottom_toTopOf="@id/sign_up_view_two"/>

    <Button
        android:id="@+id/access_dialog_ok_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/main1"
        android:backgroundTint="@null"
        android:text="@string/clause_ok"
        android:textSize="14sp"
        android:fontFamily="@font/nanum_square_neo_regular"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_use_camera_tv" />



</androidx.constraintlayout.widget.ConstraintLayout>