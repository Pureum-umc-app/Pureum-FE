<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="296dp"
        android:layout_height="322dp"
        android:background="@drawable/bg_rectangle_10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:layout_marginTop="82dp"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battle_start_text"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/battle_go_my_battle"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="11dp"
            android:layout_marginHorizontal="28dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="@string/battle_go_my_battle"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/nanum_square_neo_regular"
            android:textSize="14sp"
            android:background="@drawable/bg_rectangle_10dp" />

        <Button
            android:id="@+id/battle_exit"
            android:layout_marginHorizontal="28dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="@string/battle_exit"
            android:fontFamily="@font/nanum_square_neo_regular"
            android:textSize="14sp"
            android:textColor="@color/text1"
            android:backgroundTint="@null"
            android:background="@drawable/bg_dialog_lg" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>