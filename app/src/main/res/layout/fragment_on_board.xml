<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.signup.OnBoardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ddingdong"
            android:textColor="@color/main1"
            android:textAlignment="center"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/onboard_keywords"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:textSize="22sp"
            android:textColor="@color/text1"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="322dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:src="@drawable/ic_onboard_keyword"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/onboard_first"
            android:textColor="@color/text1"
            android:textSize="16sp"
            android:textAlignment="center"
            android:fontFamily="@font/nanum_square_neo_bold"/>
    </LinearLayout>
</layout>