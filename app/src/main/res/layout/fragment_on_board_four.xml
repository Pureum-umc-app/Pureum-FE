<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.signup.OnBoardFourFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/sign_up_logo"
           android:layout_width="wrap_content"
           android:layout_height="160dp"
           android:src="@drawable/ic_pureum_logo_big"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="140dp"/>

        <TextView
            android:id="@+id/sign_up_simple_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_simple"
            android:textSize="12sp"
            android:textColor="@color/text2"
            android:fontFamily="@font/nanum_square_neo_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:layout_marginTop="140dp"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_logo"/>

        <ImageButton
            android:id="@+id/kakao_login_ib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/kakao_login_large_wide"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_simple_login"
            android:layout_marginHorizontal="36dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>