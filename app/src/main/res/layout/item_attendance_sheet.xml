                    android:layout_height="64dp"
                    android:src="@drawable/ic_stamp_checked"
                    android:visibility="@{stamps >= 11 ? View.VISIBLE : View.GONE, default=gone}"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_stamp_not_checked"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_stamp_checked"
                    android:visibility="@{stamps >= 12 ? View.VISIBLE : View.GONE, default=gone}"/>
            </FrameLayout>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>