<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="145dp"
        android:layout_gravity="center_horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:backgroundTint="@color/white"
            android:background="@drawable/custom_round_button"
            android:layout_width="312dp"
            android:layout_height="135dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/battle_kw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text1"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                android:text="@string/keyword_battle"
                android:textSize="12sp"
                android:fontFamily="@font/nanum_square_neo_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/my_battle_keyword_com_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_neo_bold"
                android:textSize="16sp"
                android:textColor="@color/main1"
                android:text="복구"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/battle_kw"
                app:layout_constraintTop_toBottomOf="@id/battle_kw"/>

            <TextView
                android:id="@+id/my_battle_winner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="푸름"
                android:textColor="@color/main1"
                android:textSize="16sp"
                android:fontFamily="@font/nanum_square_neo_bold"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="@id/battle_kw"
                app:layout_constraintTop_toBottomOf="@id/my_battle_keyword_com_tv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text1"
                android:fontFamily="@font/nanum_square_neo_bold"
                android:text="@string/my_battle_win"
                app:layout_constraintStart_toEndOf="@+id/my_battle_winner_name"
                app:layout_constraintTop_toTopOf="@+id/my_battle_winner_name"
                app:layout_constraintBottom_toBottomOf="@+id/my_battle_winner_name"/>

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_battle_basic_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>






        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>