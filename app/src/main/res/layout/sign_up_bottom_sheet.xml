<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:id="@+id/bottomSheetDashBoardLayout"
    app:behavior_hideable="true"
    app:behavior_peekHeight="300dp"
    app:behavior_draggable="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="70dp"
        android:background="@null"
        android:backgroundTint="@color/white"
        >


        <TextView
            android:id="@+id/signup_agree_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:textColor="@color/text1"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:text="@string/signup_agree"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/signup_all_agree_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_all_agree"
            android:textColor="@color/text1"
            android:textSize="14sp"
            android:fontFamily="@font/nanum_square_neo_regular"
            android:layout_marginTop="55dp"
            android:layout_marginStart="58dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_agree_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/signup_gray_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_line_gray"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@id/signup_all_agree_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/signup_all_agree_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_signup_no_fill"
            app:layout_constraintEnd_toEndOf="@+id/signup_gray_bar"
            app:layout_constraintBottom_toTopOf="@id/signup_gray_bar"/>

        <TextView
            android:id="@+id/service_agree_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text1"
            android:fontFamily="@font/nanum_square_neo_regular"
            android:text="@string/agree_service"
            app:layout_constraintTop_toTopOf="@+id/service_agree_ib"
            app:layout_constraintBottom_toBottomOf="@+id/service_agree_ib"
            app:layout_constraintStart_toStartOf="@id/signup_gray_bar"/>

        <ImageView
            android:id="@+id/service_agree_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signup_no_fill"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/signup_gray_bar"
            app:layout_constraintEnd_toEndOf="@id/signup_gray_bar"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signup_service_frame"
            app:layout_constraintTop_toTopOf="@id/service_agree_ib"
            app:layout_constraintBottom_toBottomOf="@id/service_agree_ib"
            app:layout_constraintStart_toStartOf="@id/signup_gray_bar"/>


        <ImageView
            android:id="@+id/my_info_agree_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_signup_no_fill"
            app:layout_constraintTop_toBottomOf="@+id/service_agree_ib"
            app:layout_constraintEnd_toEndOf="@id/signup_gray_bar"/>

        <TextView
            android:id="@+id/my_info_agree_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text1"
            android:fontFamily="@font/nanum_square_neo_regular"
            android:text="@string/agree_my_info"
            app:layout_constraintTop_toTopOf="@+id/my_info_agree_ib"
            app:layout_constraintBottom_toBottomOf="@+id/my_info_agree_ib"
            app:layout_constraintStart_toStartOf="@id/signup_gray_bar"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signup_myinfo_frame"
            app:layout_constraintTop_toTopOf="@+id/my_info_agree_ib"
            app:layout_constraintBottom_toBottomOf="@+id/my_info_agree_ib"
            app:layout_constraintStart_toStartOf="@id/signup_gray_bar"/>

        <ImageView
            android:id="@+id/my_info_agree_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signup_info_agree"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/signup_gray_bar"
            app:layout_constraintEnd_toEndOf="@id/signup_gray_bar"
            app:layout_constraintTop_toBottomOf="@id/my_info_agree_ib"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_agree_next_bt"
            android:layout_width="296dp"
            android:layout_height="65dp"
            android:text="@string/signup_next"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:background="@drawable/signup_next_button_not_fill"
            android:backgroundTint="@color/main3"
            android:textColor="@color/text2"
            android:fontFamily="@font/nanum_square_neo_regular"
            app:layout_constraintStart_toStartOf="@id/signup_gray_bar"
            app:layout_constraintEnd_toEndOf="@id/signup_gray_bar"
            app:layout_constraintTop_toBottomOf="@+id/my_info_agree_iv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>