<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/signup_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="32dp"
        android:minHeight="720dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:text="@string/signup_agree"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_all_agree"
                android:fontFamily="@font/nanum_square_neo_regular"
                android:textSize="14sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/signup_all_agree_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_check_box"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="16dp"
            android:background="@color/text3"
            android:backgroundTint="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/service_agree_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agree_service"
                android:fontFamily="@font/nanum_square_neo_regular"
                android:textSize="14sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/service_agree_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_signup_no_fill"/>
        </LinearLayout>



        <ImageView
            android:id="@+id/my_info_agree_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_signup_no_fill"
            app:layout_constraintTop_toBottomOf="@+id/service_agree_ib"
            app:layout_constraintEnd_toEndOf="@id/signup_gray_bar"/>

        <TextView
            android:id="@+id/my_info_agree_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text1"
            android:fontFamily="@font/nanum_square_neo_regular"
            android:text="@string/agree_my_info"
            app:layout_constraintTop_toTopOf="@+id/my_info_agree_ib"
            app:layout_constraintBottom_toBottomOf="@+id/my_info_agree_ib"
            app:layout_constraintStart_toStartOf="@id/signup_gray_bar"/>


        <ImageView
            android:id="@+id/my_info_agree_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signup_info_agree"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/signup_gray_bar"
            app:layout_constraintEnd_toEndOf="@id/signup_gray_bar"
            app:layout_constraintTop_toBottomOf="@id/my_info_agree_ib"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_agree_next_bt"
            android:layout_width="296dp"
            android:layout_height="65dp"
            android:text="@string/signup_next"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:background="@drawable/signup_next_button_not_fill"
            android:backgroundTint="@color/main3"
            android:textColor="@color/text2"
            android:fontFamily="@font/nanum_square_neo_regular"
            app:layout_constraintStart_toStartOf="@id/signup_gray_bar"
            app:layout_constraintEnd_toEndOf="@id/signup_gray_bar"
            app:layout_constraintTop_toBottomOf="@+id/my_info_agree_iv"/>
    </LinearLayout>


</layout>